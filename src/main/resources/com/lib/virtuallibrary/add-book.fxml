                  <Image url="@../../../images/logo.png" />
               </image>
            </ImageView>
            <Label text="VirtualLibrary" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label prefHeight="18.0" prefWidth="277.0" />
        </items>
      </ToolBar>
      <Label fx:id="name" layoutX="130.0" layoutY="67.0" prefHeight="26.0" prefWidth="302.0">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="146.0" layoutY="115.0" text="Add a new book:">
         <font>
            <Font size="20.0" />
